{# templates/profile/bornes.html.twig #}
{% extends "base.html.twig" %}

{% block head %}
{{ parent() }}
{% block title %}History{% endblock %}
{% endblock %}

{% block body %}
<header>
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <a class="navbar-brand" href="/">Accueil<span class="sr-only">(current)</span></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
      {% if rights >= 0 %}
      <li class="nav-item">
        <a class="nav-link active" href="/profil">Profil</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/bornes">Bornes</a>
      </li>
      {% endif %}
      {% if rights >= 1 %}
      <li class="nav-item">
        <a class="nav-link" href="/voitures">Voitures</a>
      </li>
      {% endif %}
      {% if rights >= 2 %}
      <li class="nav-item">
        <a class="nav-link" href="/admin">Administration</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>
<ul id="sousmenu" >
<p>
<br />
<img src="universitecatholille.png" width="100" height="70" alt="Universite Catholique de Lille" />
<img src="LOGO-LIVE-TREE.jpg" width="100" height="70" alt="Logo Live Tree" />
</p>
<li><a href='/profil'>Mon compte</a></li>
<li><a href='/profil/historique'>Mes réservations</a></li>
</ul>
</header>
<br/>
<h1>Historique</h1>
<h2>Réservations de bornes</h2>
<h3>A venir</h3>
<hr>
{% for resa in resa_borne_futur %}
  <ul>
    <li>Début: {{resa.start_date|date('Y-m-d H:i:s')}}</li>
    <li>Fin: {{resa.end_date|date('H:i:s')}}</li>
    <li>Charge estimée en arrivant: {{resa.charge}}</li>
    <li>Lieu: {{resa.place}}</li>
    <li><a href="{{ path('delete_resa_borne', {'id_resa': resa.id_resa}) }}"><button>Annuler</button></a></li>
  </ul>
  <hr>
{% endfor %}
<h3>Historique</h3>
<hr>
{% for resa in resa_borne_past %}
  <ul>
    <li>Début: {{resa.start_date|date('Y-m-d H:i:s')}}</li>
    <li>Fin: {{resa.end_date|date('H:i:s')}}</li>
    <li>Charge estimée en arrivant: {{resa.charge}}</li>
    <li>Lieu: {{resa.place}}</li>
  </ul>
  <hr>
{% endfor %}
<h2>Réservations de véhicules</h2>
<h3>A venir</h3>
<hr>
{% for resa in resa_car_futur %}
  <ul>
    <li>Début: {{resa.date_start|date('Y-m-d')}}  {{resa.start_time|date('H:i:s')}}</li>
    <li>Fin: {{resa.date_end|date('Y-m-d')}}  {{resa.end_time|date('H:i:s')}}</li>
    <li>Kilométrage prévu: {{resa.km_planned}} kms</li>
    <li>
      {% if resa.km_start_done %}
      Kilométrage au départ: {{resa.km_start}} kms
      {% else %}
      {{ form_start(resa.km_start_form, {'attr': {'novalidate': 'novalidate'}}) }}
      {{ form_row(resa.km_start_form.km) }} {{ form_row(resa.km_start_form.confirm) }}
      {{ form_end(resa.km_start_form) }}
      {% endif %}
    </li>
    <li>
      {% if resa.km_end_done %}
      Kilométrage au retour: {{resa.km_end}} kms
      {% else %}
      {{ form_start(resa.km_end_form, {'attr': {'novalidate': 'novalidate'}}) }}
      {{ form_row(resa.km_end_form.km) }} {{ form_row(resa.km_end_form.confirm) }}
      {{ form_end(resa.km_end_form) }}
      {% endif %}
    </li>
    <li>Etablissement: {{resa.facility}}</li>
    <li>Raison: {{resa.id_reason}}</li>
    <li>Voiture: {{resa.id_company_car}}</li>
    <li>Etat des lieux:
      {% if resa.state.done %}
      <ul>
        <li>Avant: {{resa.state.front}}</li>
        <li>Arrière: {{resa.state.back}}</li>
        <li>Droite: {{resa.state.right_side}}</li>
        <li>Gauche: {{resa.state.left_side}}</li>
        <li>Intérieur: {{resa.state.inside}}</li>
        <li>Commentaire: {{resa.state.commentary}}</li>
      </ul>
      {% else %}
      {{ form_start(resa.state.form, {'attr': {'novalidate': 'novalidate'}}) }}
      {{ form_widget(resa.state.form) }}
      {{ form_end(resa.state.form) }}
      {% endif %}

    </li>
    <li><a href="{{ path('delete_resa_car', {'id_resa': resa.id_resa}) }}"><button>Annuler</button></a></li>
  </ul>
  <hr>
{% endfor %}
<h3>Historique</h3>
<hr>
{% for resa in resa_car_past %}
<ul>
  <li>Début: {{resa.date_start|date('Y-m-d')}}  {{resa.start_time|date('H:i:s')}}</li>
  <li>Fin: {{resa.date_end|date('Y-m-d')}}  {{resa.end_time|date('H:i:s')}}</li>
  <li>Kilométrage prévu: {{resa.km_planned}} kms</li>
  <li>Heure de départ: {{resa.end_time}}</li>
  <li>Etablissement: {{resa.facility}}</li>
  <li>Raison: {{resa.id_reason}}</li>
  <li>Voiture: {{resa.id_company_car}}</li>
  <li>Etat des lieux:
    {% if resa.state.done %}
    <ul>
      <li>Avant: {{resa.state.front}}</li>
      <li>Arrière: {{resa.state.back}}</li>
      <li>Droite: {{resa.state.right_side}}</li>
      <li>Gauche: {{resa.state.left_side}}</li>
      <li>Intérieur: {{resa.state.inside}}</li>
      <li>Commentaire: {{resa.state.commentary}}</li>
    </ul>
    {% else %}
    <p>Il est trop tard pour réaliser l'état des lieux</p>
    {% endif %}

  </li>
</ul>
<hr>
{% endfor %}
{% endblock %}
