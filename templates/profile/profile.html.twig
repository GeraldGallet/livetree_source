{# templates/profile/profile.html.twig #}
{% extends "base.html.twig" %}

{% block head %}
{{ parent() }}
<title>Profil</title>
{% endblock %}

{% block body %}
<br/>
<a href='#'>Mon compte</a>
<a href='/profil/historique'>Mes réservations</a>

<h1>{{ first_name }} {{ last_name }}</h1>
<h2>Mon compte</h2>
<ul>
  <li><u>Email</u>: {{ email }}</li>
  <li><u>Statut</u>: {{ id_status }}</li>
  <li><u>Téléphone</u>: {{ phone_number }}</li>
  <li><u>Etablissements</u>:
    <ul>
      {% for facility in facilities %}
        <li>{{ facility.name }} <a href="{{ path('delete_work', {'id_facility': facility.id_facility}) }}"><button>Supprimer</button></a></li>
      {% endfor %}
      <li>
        {{ form_start(work_form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(work_form) }}
        {{ form_end(work_form) }}
      </li>
    </ul>
  </li>
  <li><u>Lieux</u>:
    <ul>
      {% for place in places %}
        <li>{{ place }}</li>
      {% endfor %}
    </ul>
  </li>
</ul>

<h2>Mes voitures</h2>
{% for car in personal_cars %}
  <ul>
    <li><b> {{car.name}} </b></li>
    <li> {{car.model}} </li>
    <li> {{car.power}} </li>
    <li><a href="{{ path('delete_personal_car', {'car_name': car.name}) }}"><button>Supprimer</button></a></li>
  </ul>
{% endfor %}
{{ form_start(personal_car_form, {'attr': {'novalidate': 'novalidate'}}) }}
{{ form_widget(personal_car_form) }}
{{ form_end(personal_car_form) }}
{% endblock %}
