{# templates/admin/admin.html.twig #}
{% extends "base.html.twig" %}

{% block head %}
{{ parent() }}
{% block title %}Administration{% endblock %}
{% endblock %}

{% block body %}
<header>
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <a class="navbar-brand" href="/">Accueil<span class="sr-only">(current)</span></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
      {% if rights >= 0 %}
      <li class="nav-item">
        <a class="nav-link" href="/profil"><i class="fas fa-user"></i> Profil</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/bornes"><i class="fas fa-plug"></i> Bornes</a>
      </li>
      {% endif %}
      {% if rights >= 1 %}
      <li class="nav-item">
        <a class="nav-link" href="/voitures"><i class="fas fa-car"></i> Voitures</a>
      </li>
      {% endif %}
      {% if rights >= 2 %}
      <li class="nav-item">
        <a class="nav-link active_menu" href="/admin"><i class="fas fa-shield-alt"></i> Administration</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/bornes">Admin - Bornes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/voitures">Admin - Voitures</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/profils">Admin - Profils</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>
</header>
<br/><br/><br/>
<h1>Administration</h1>
<h2>Etablissements</h2>
{% for facility in facilities %}
<ul>
  <li>Nom: {{facility.name}}</li>
  <li>Adresse: {{facility.address}}</li>
  <li>Informations supplémentaires: {{facility.complementary}}</li>
  {% if rights == 3 %}
    <a href="{{ path('delete_facility', {'name': facility.name}) }}"><button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i> Supprimer</button></a>
  {% endif %}
</ul>
{% endfor %}
{% if rights == 3 %}
  {{ form_start(facility_form, {'attr': {'novalidate': 'novalidate'}}) }}
  {{ form_widget(facility_form) }}
  {{ form_end(facility_form) }}
{% endif %}

<br/>
<h2>Lieux</h2>
{% for place in places %}
<ul>
  <li>Nom: {{place.name}}</li>
  <li>Adresse: {{place.address}}</li>
  <li>Etablissement affilié: {{place.facility}}</li>
  <a href="{{ path('delete_place', {'id_place': place.id_place}) }}"><button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i> Supprimer</button></a>
</ul>
{% endfor %}
{{ form_start(place_form, {'attr': {'novalidate': 'novalidate'}}) }}
{{ form_widget(place_form) }}
{{ form_end(place_form) }}

<br/>
<h2>Voitures</h2>
{% for car in cars %}
<ul>
  <li>Etablissement: {{car.facility}}</li>
  <li>Nom: {{car.name}}</li>
  <li>Modèle: {{car.model}}</li>
  <li>Puissance (kW): {{car.power}}</li>
  <a href="{{ path('delete_company_car', {'id_company_car': car.id_company_car}) }}"><button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i> Supprimer</button></a>
</ul>
{% endfor %}
{{ form_start(car_form, {'attr': {'novalidate': 'novalidate'}}) }}
{{ form_widget(car_form) }}
{{ form_end(car_form) }}

<br/>
<h2>Bornes</h2>
{% for borne in bornes %}
<ul>
  <li>Lieu: {{borne.place}}</li>
  <li>Emplacement: {{borne.desc_place}}</li>
  <li>Nom: {{borne.name}}</li>
  <a href="{{ path('delete_borne', {'id_borne': borne.id_borne}) }}"><button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i> Supprimer</button></a>
</ul>
{% endfor %}
{{ form_start(borne_form, {'attr': {'novalidate': 'novalidate'}}) }}
{{ form_widget(borne_form) }}
{{ form_end(borne_form) }}
<br/>
{% endblock %}
